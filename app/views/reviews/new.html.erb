<div class="container">
  <div class="row justify-content-center">
    <%= simple_form_for([@restaurant, @review]) do |f| %>
        <%= f.input :rating, collection: (0..5), class: 'form-control' %>
        <%= f.input :content %>
        <%= f.submit %>
    <% end %>
  </div>
  <div class="row justify-content-center mt-3">
    <%= link_to 'Back to the restaurant', restaurant_path(@restaurant), class: 'btn btn-secondary mr-3' %>
    <%= link_to 'Back to the list', restaurants_path, class: 'btn btn-light' %>
  </div>
</div>
