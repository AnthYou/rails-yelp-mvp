<div class="container">
  <div class="row justify-content-center">
    <h2><%= @restaurant.name %> | <%= @restaurant.category %></h2>
  </div>
  <div class="row justify-content-center">
    <p><%= @restaurant.address %></p>
  </div>
  <div class="row justify-content-center">
    <p><%= @restaurant.phone_number %></p>
  </div>

  <hr>
  <div class="row">
    <h3>Reviews</h3>
  </div>
  <% @restaurant.reviews.each do |review| %>
  <div class="row">
    <%= review.rating %>/5 | <%= review.content %>
  </div>
  <% end %>

  <hr>
  <div class="row justify-content-center">
  <%= simple_form_for([@restaurant, @review]) do |f| %>
      <%= f.input :rating, collection: (0..5), class: 'form-control' %>
      <%= f.input :content %>
      <%= f.submit %>
  <% end %>
  </div>

  <hr>
  <div class="row">
    <%= link_to 'Back to the list', restaurants_path, class: 'btn btn-secondary' %>
  </div>
</div>

