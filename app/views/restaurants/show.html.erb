<div class="container">
  <div class="row justify-content-center">
    <h2><%= @restaurant.name %> | <%= @restaurant.category %></h2>
  </div>
  <div class="row justify-content-center">
    <p><%= @restaurant.address %></p>
  </div>
  <div class="row justify-content-center">
    <p><%= @restaurant.phone_number %></p>
  </div>

  <hr>
  <div class="row">
    <h3>Reviews</h3>
  </div>
  <% @restaurant.reviews.each do |review| %>
  <div class="row">
    <%= review.rating %>/5 | <%= review.content %>
  </div>
  <% end %>

  <hr>
  <div class="row">
    <%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary mr-3' %>
    <%= link_to 'Back to the list', restaurants_path, class: 'btn btn-secondary' %>
  </div>
</div>

